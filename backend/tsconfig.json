{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2021"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "dist/src",
    "sourceMap": true,
    "typeRoots": ["src/types", "./node_modules/@types"],
    "allowJs": true,
    "importHelpers": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": [
    "**/*.spec.*",
    "**/webpack.config.js",
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "build/**/*"
  ]
}
